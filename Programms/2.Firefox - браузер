########################
## Firefox - браузер ##
########################

$ sudo pacman -S firefox-i18n-ru # русская локализация для firefox

$ sudo pacman -S arch-firefox-search  # поиск по wiki, aur, pkg ...

$ sudo pacman -S ffmpeg  # для воспроизведения видео html5

$ sudo pacman -S hunspell  # проверка орфографии в Firefox

$ yaourt hunspell-en hunspell-ru  # словарь для русского и английского языка

###################################
## Оптимизация памяти в браузере ##
###################################
     
     @| about:config  # диспетчер настроек

     browser.sessionhistory.max_total_viewers -> 0  # отвечает за количество отведенной оперативной памяти в которую откладываются посещенные нами страницы

     config.trim_on_minimize -> true  # создать -> логическое  # отвечает за выгрузку Firefox в файл подкачки, пока, собственно, браузер свернут

     ## Перзапуск браузера ##


################################
## Ускорение загрузки сайтов ##
################################    
     
     @| about:config  # диспетчер настроек

     network.http.pipelining -> true  # параметры предписывают Мозилке делать несколько запросов в соединении, не дожидаясь ответа сервера

     network.http.proxy.pipelining —> true # параметры предписывают Мозилке делать несколько запросов в соединении, не дожидаясь ответа сервера

     network.http.pipelining.maxrequests -> 32 # параметр задает максимальное количество запросов, которое может быть сделано в соединении

     nglayout.initialpaint.delay -> 0  # создать -> целое  # уменьшает до нуля задержку перед прорисовкой (рендерингом) информации

     content.notify.backoffcount -> 5  # создать -> целое  # оптимален между скоростью загрузки вцелом и адекватным выводом того, что уже загрузилось

     ui.submenuDelay -> 0  # создать -> целое  # позволяет начать загрузку страницы стразу, а не ждать пока загрузятся картинки и прочие элементы

     plugin.expose_full_path -> true  # создать -> логическое  # задает в конфиге полные пути к плагинам (а не только их названия), что, теоретически, сказывается на скорости работы

     privacy.trackingprotection.enabled -> true  # включаем защиту от отслеживания

     ## Перезапуск браузра ##

######################################
## @| about:addons  # расширения ##
######################################

        Ghostery  # конфиденцильность (скажи жучкам - НЕТ!)

        uBlock  # блокировщик рекамы 

        Frigate  # разблокировка сайтов 

        Suspended Tad  # засыпание вкладок