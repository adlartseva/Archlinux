#############################################
## Speedtest - проверка скорости интернета ##
#############################################

$ yaourt speedtest-cli-git  # установим утилитку

$ speedtest-cli  # команда запуска проверки скорости интерниа

$ speedtest --share  # команда проверки скорости с выводом картинки с сайта спидтест

$ speedtest-cli --bytes  # можно узнать скорость на в мегабитах, а в мегабайтах

$ speedtest-cli --simple  # узнаем скорость интернета, только в цифрах

$ speedtest-cli --list  # эта команда выдаст список доступных серверов

$ speedtest-cli --list > test.txt  # эта команда запишет список серверов в файлик

$ speedtest-cli --server 874  # в моем случае сервер 874 (Долгопрудный)

$ speedtest-cli --server 874 --share  # проверим скорость по серверу с выводом картинки с сайта спидтест

$ speedtest-cli --bytes --server 874 --share  # проверим скорость по серверу с выводом картинки с сайта спидтест и узанаем скорость в мегабайтах