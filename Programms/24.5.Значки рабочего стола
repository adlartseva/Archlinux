###########################
## Значки рабочего стола ##
###########################

$ nano ~/.gkrc-2.0  # делаем значки с тенью

style "xfdesktop-icon-view" { 
XfdesktopIconView::label-alpha = 0 

# вид подписи в нормальном состоянии значка
XfdesktopIconView::shadow-x-offset = 1 
XfdesktopIconView::shadow-y-offset = 1 
XfdesktopIconView::shadow-color = "#444444"
# вид подписи при выборе значка 
XfdesktopIconView::selected-shadow-x-offset = 2 
XfdesktopIconView::selected-shadow-y-offset = 2 
XfdesktopIconView::selected-shadow-color = "#444444" 

fg[NORMAL] = "#ffffff" 
} 
widget_class "*XfdesktopIconView*" style "xfdesktop-icon-view"