###########################################
## Иерархия файловой системы в Archlinux ##
###########################################

/boot  # здесь находятся: grub, ядро linux, образ initrd и memtest

/dev /proc /sys # виртуальные файловые системы. Никакого дискового пространства не занимаю!

    /dev  # находятся все физические устройства и псевдо устройства, виртуальные консоли, псевдо терминалы

    /proc  # хранятся под директории процессов, которые запущены в данный момент, инфо о сетевых протоколов и т.д.

    /sys  # хранятся под директории, которая содержит сведения о шинах, блоках, инфо ядре и т.д.

/etc  # содержит конфиги всей системы

/home  # домашнии дериктории пользователей    

/media  # подключаются съемные носители

/mnt  # временная точка монтирования

/opt  # директория содержит файлы некоторых программ

/root  # домашняя директория суперпользователя

/run  # централизованное хранилище временнных файлов системы

/temp  # временные файлы системы

/usr  # файлы испоьзуемые пользователем, а также утилиты

/usr/bin  # исполняемые файлы программ linux 

/usr/include  # системные подключаемые файлы общего пользования для языка програмирования С++

/usr/lib  # библиотеки используемые программами

/usr/local  # файлы не относящиеся напрямую к linux. Либо установленные позже, чем оснавная часть системы.

/usr/share  # файлы используемые для работы с графикой

      /usr/share/doc  # документация по установленным программам

      /usr/share/icons  # иконки

      /usr/share/theme  # темы

      usr/share/applications/  # ярлыки приложений

/usr/scr  # тсходные коды для ядра linux

/usr/sbin  # исполняемые файлы программ для системного администрирования и насторойки ситемы linux  (ссылка на /bin)

/var  # хранит в себе: кэш, логи и т.д. (и кэш пакмана)