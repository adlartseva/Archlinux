##########################
## Переменные окружения ##
##########################

$ HOME=/home/username/  # таким образом можно задать переменную

$ echo $HOME  # так можно посмотреть значение переменной. Перед переменной всегда должен стоять значок доллара ($)

$ export HOME  # таким образом из пременной HOME можно сделать глобальную переменную

$ declare -x HOME  # тоже самое

$ export HOME=/home/username/  # таким образом можно объявить переменную и сделать её глобальной

$ env  # отобразить все глобальные переменные. Команда "pnintenv" делать тоже самое, так же как, без дописывания, команды: "export" и "declare -x"

$ set | less  # можно удобнее просмотреть все переменные

$ env | grep HOME  # можно посмотреть значение переменной

$ unset HOME  # так можно удалить переменную

$ type set  # с помощью команды type можно узнать, является ли программу встроенной в шелл или в систему

export PATH="${PATH}:/home/пользователь/.bin"

################

PATH  # список директорий, отделяющихся друг от друга двоеточием (:)

PWD  # директория пользователя

EDITOR  # текстовый редактор по умолчанию
