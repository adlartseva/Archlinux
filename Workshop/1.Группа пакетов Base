#########################
## Группа пакетов Base ##
#########################

bash                 # bash shell (оболочка)

bzip2                # программа для сжатия высокого качества

coreutils            # пакет программного обеспечения GNU, содержащий большое количество основных утилит (вкл. в себя утилиты: ls; rm; cat; и т.д.)

cryptsetup           # инструмент настройки пространства пользователя для шифрования блочных устройств с помощью dm-crypt

device-mapper        # устройство картогрофа библиотеки и инструменты в пользовательском пространстве

dhcpcd               # dhcpcd клиент демон

diffutils            # программы, используемые для создания файлов исправлений

e2fsprogs            # ext2 /3/4 утилиты файловой системы

file                 # утилита идентификации типа файов

filesystem           # базовая файловая система

findutils            # GNU утилиты для поиска файлов

gawk                 # GNU версия AWK

gcc-libs             # бибилиотеки gcc

gettext              # библиотека интернационализация GNU

glibc                # GNU библиотеки

grep                 # утилиты строки поиска

gzip                 # утилита сжатия GNU

inetutils            # коллекция общих сетевых программ

iproute2             # ip-маршрутизация

iputils              # инструменты мониторинга сети, включая пинг

jfsutils             # утилиты файловой системы JFS

less                 # программа на основе терминала для просмотра текстовых файлов

licenses             # стандартный пакет распространения лицензий

linux                # ядро Linux и модули

logrotate            # автоматическое регистрации логов

lvm2                 # менеджер логических томов (утилиты)

man-db               # утилита для чтения страниц man

man-pages            # справочные страницы Linux

mdadm                # средство для управления / мониторинга Linux RAID массивов

nano                 # пико редактор (клон) с улучшениями

netctl               # базовый профиль управления Systemd сетью

pacman               # Базовая библиотека пакетного менеджера с поддержкой зависимостей

pciutils             # шина PCI конфигурации пространства библиотеки доступа и инструменты

pcmciautils          # утилита для вставки и удаления PCMCIA карты

perl                 # очень способный, богатый язык программирования

procps-ng            # утилита для мониторинга системы и ее процессов

psmics               # разные PROCFS инструменты

reiserfsprogs        # ReiserFS утилиты

s-nail               # система обработки почты с командным синтаксисом

sed                  # GNU потоковый редактор

shadow               # пароль и управление учетными записями, набор инструментов с поддержкой теневых файлов и PAM

sysfsuils            # системные утилиты Sysfs

systemd-syscompat    # Sysvinit Compat для Systemd

tar                  # утилита предназначеннная ждя хранения, резервного копирования и транспортировки файлов

texinfo              # система документации GNU для оперативной информации и печатной продукции

usbutils             # утилиты USB устройств

util-linux           # различные системные утилиты для Linux

vi                   # техтовый редактор vi

which                # утилита, чтобы показать полный путь команд

xfsprogs             # утилита файловой системы XFS