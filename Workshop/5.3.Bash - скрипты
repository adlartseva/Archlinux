####################
## Bash - скрипты ##
#####################
## Запуск скриптов ##
#####################

$ source iron # не просто запуск скрипта, а его запуск в текущей среде, т.е. все переменные текущей оболочки будут доступны скрипту

$ . iron  # чтобы переменные скрипта скопировались в текущую среду, запускать его так ( "./iron" это тоже самое)

$ mv iron /usr/bin/  # перемещаем скрипт. теперь он запускается командой "iron"

################
## Переменные ##
################

env  # без параметров выводит список переменных чтобы переменные скрипта скопировались в текущую среду, запускать его такокружения (то есть наследуемых дочерними процессами), в отличии от команды

set  # которая без параметров выводит список ВСЕХ переменных баша.

env -u  # var команда запускает команду БЕЗ переменной окружения var

env -i  # команда запускает команду вообще без переменных окружения.

var=x  # команда экспортирует переменную var со значением x только для выполняемой здесь же команды.

export  # экспортирует обычную переменную баша в окружение, то есть делает её наследуемой всеми дочерними процессами.