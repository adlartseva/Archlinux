#######################
## Полезные команды ##
#######################

$ yaourt -C  # посмотреть какие .conf.pacnew есть в системе

$ uname -r  # узнать какое ядро

$ uname -a  # узанать какой дистрибутив, время, дата...

$ systemd-analyze  # показывает за какое время была загружена система

$ systemd-analyze blame  # показывает что загружается вместе с системой 

$ rm -r название_папки/  # удаляет папку

$ chmod +x путь_до_файла_или_папки  # задает права

$ ls  # просмотр папок в данной директории

$ ls -la  # выводит подробную информацию о содержимом каталога, включая скрытые файлы и каталоги

$ cp -r  # копирует папку

$ cp  # копирует файл

$ touch test.txt  # создаёт новый пустой текстовый файл с именем test.txt. Тоже самое делает команда "> test.txt"

$ sha512sum slimjet_amd64.deb  # узнать контрольную сумму (slimjet... - название пакета)

$ tar -zcvf xfce4-05-13-2016 tar.gz ~/.config/xfce4/  # таким образом можно заархивировать любую папку

$ tar -zxvf xfce4-05-13-2016 tar.gz -С /home/username/  # таким образом можно разархивировать архив

$ ip link  # показывает вашу сеть (название)

$ df -h  # покажет размер занимаемого места в файловой системе

$ sudo mkfs.vfat /dev/sdc -I  # форматируем флэшки в Fat32

#######################################################################
## $ /usr/share/applicaions  --здесь находятся ярлыки всех программы ##
#######################################################################
## Команды для значков на рабочем столе ##
##########################################

$ xfce4-session-logout -h  # выключать компьютер не показывая диалог завершения сеанса

$ xfce4-session-logout -r  # перезагружать компьютер не показывая диалог завершения сеанса