#####################
## Разметка диска ##
#####################

 /dev/sda1   boot   500MB

 /dev/sda2   root   40G   
 
 /dev/sda3   home   300G

####################################

# fdisk -l  # показывает все диски

# fdisk -l /dev/sda  # показывает разделы и таблицы на данном диске

# fdisk /dev/sda  # переходим к разметке диска

  Command (m for help): n  # создадим новый раздел 

                        p  # основной

                        1  # номер раздела 1-ый

                     <Enter>  # пропускаем выбор секторов

                      +500M  # задаем размер под boot

  Command (m for help): n  # создадим новый раздел 

                        p  # основной

                        2  # номер раздела 2-ый

                     <Enter>  # пропускаем выбор секторов

                      +40G  # задаем размер под root

  Command (m for help): n   # создадим новый раздел 

                        p  # основной

                        3  # номер раздела 3-ый

                     <Enter>  # пропускаем выбор секторов

                      +300G  # задаем размер под home

  Command (m for help): t  # изменим метку раздела

                        1  # выберим 1-ый раздел

                        L  # выводим список известных типов разделов (ext2,ext4...)

                        82  # выберим для linux

  Command (m for help): t  # изменим метку раздела

                        2  # выберим 2-ый раздел

                        L  # выводим список известных типов разделов (ext2,ext4...)

                        82  # выберим для linux

  Command (m for help): t  # изменим метку раздела

                        3  # выберим 3-ый раздел

                        L  # выводим список известных типов разделов (ext2,ext4...)

                        82  # выберим для linux

  Command (m for help): w  # сохраняем изменения и выходим

  ##################################################
  ## Теперь можно приступить к базовой установке ##
  ##################################################